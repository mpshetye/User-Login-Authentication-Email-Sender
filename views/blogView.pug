extends layout.pug

block append head
  link(rel='stylesheet' href='/css/index.css')

block content 
  .jumbotron.mx-auto.my-5
      .card.m-auto(style='width: 50rem; background-color: #ffffff5c;')
        .card-body
          h1.card-title.text-center=blog.blogTitle
          .my-4.mx-5
            small(style='color: #ff2300a6;') Written by: #{blog.blogFirstName} #{blog.blogLastName} | #{blog.blogUserName} | #{blog.blogEmail}
          .text-center.my-3
            p.card-text #{blog.blogBody}
          if data.userName == blog.blogUserName
            .text-center.my-3
              a.btn.btn-primary(href=`/nodeblogapi/read/${blog._id}`) Edit
              a.ms-3.btn.btn-danger(href=`/nodeblogapi/read/${blog._id}`) Delete