extends layout.pug

block content
  .jumbotron.mx-auto.my-5
      .card.m-auto(style='width: 50rem; background-color: #ffffff5c;')
        .card-body
          h4.card-title.text-center Update Post
          form.my-3.mx-5(action=`/nodeblogapi/edit-blogs/${blog._id}` method='post')
            if data
              .row.mb-3
                .col-sm-6
                  input#blogFirstName.form-control(type='text' name='blogFirstName' value=blog.blogFirstName readonly)
                .col-sm-6
                  input#blogLastName.form-control(type='text' name='blogLastName' value=blog.blogLastName  readonly)
              .row.mb-3
                .col-sm-6
                  input#blogEmail.form-control(type='email' name='blogEmail' value=blog.blogEmail  readonly)
                .col-sm-6
                  input#blogUserName.form-control(type='text' name='blogUserName' value=blog.blogUserName  readonly)
              .row.mb-3
                .col-sm-12
                  input#blogTitle.form-control(type='text' name='blogTitle' value=blog.blogTitle required)
              .row.mb-3
                .col-sm-12
                  input#blogSnippet.form-control(type='text' name='blogSnippet' value=blog.blogSnippet required)
              .row.mb-3
                .input-group
                  textarea#blogBody.form-control(name='blogBody' cols='30' rows='10' required)=blog.blogBody
              .text-center
                button.btn.btn-primary(type='submit') Update Blog
                button.btn.btn-danger.mx-3(type='reset') Reset
